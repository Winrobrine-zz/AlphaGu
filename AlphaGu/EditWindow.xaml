<local:AlphaWindow x:Class="AlphaGu.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlphaGu"
        mc:Ignorable="d"
        Title="EditWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen" Loaded="AlphaWindow_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox x:Name="strikeBox" VerticalAlignment="Center" Width="80" Margin="5" Style="{DynamicResource AlphaComboBoxStyle}">
                <ListBoxItem Content="Strike"/>
            </ComboBox>
            <ComboBox x:Name="ballBox" VerticalAlignment="Center" Width="80" Margin="5" Style="{DynamicResource AlphaComboBoxStyle}">
                <ListBoxItem Content="Ball"/>
            </ComboBox>
            <Button x:Name="editButton" Content="Edit" HorizontalAlignment="Center" VerticalAlignment="Center" Click="editButton_Click" Style="{DynamicResource AlphaButtonStyle}"/>
        </StackPanel>

    </Grid>
</local:AlphaWindow>
