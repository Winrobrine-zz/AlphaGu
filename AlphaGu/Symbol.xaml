<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="AlphaGu.Symbol"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <Storyboard x:Key="Calm" RepeatBehavior="Forever"/>
        <Storyboard x:Key="Optimistic" RepeatBehavior="Forever"/>
        <Storyboard x:Key="Abashed" RepeatBehavior="Forever"/>
    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded"/>
    </UserControl.Triggers>
    <Grid>
        <Image Source="AlphaGu.png" Margin="20"/>
        <TextBlock x:Name="Number" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="32"/>
    </Grid>
</UserControl>
